@{
  Layout = "_Layout";
}
<h1>Add a vendor</h1>
<form action="/vendors" method="post">
  <label for="vendorName">Vendor name:</label>
  <input id="vendorName" name="vendorName" type="text">
  <label for="vendorDesc">Vendor description:</label>
  <input id="vendorDesc" name="vendorDesc" type="text">
  <label for="vendorLoc">Vendor location:</label>
  <input id="vendorLoc" name="vendorLoc" type="text">
  <button type="submit">Add</button>
</form>

<p><a href="/">Back home</a></p>
<p><a href="/categories">Back to vendors</a></p>
